<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/diff_s2"
    android:id="@+id/nav_layout"
    android:backgroundTint="@color/colorWhite"
    >

    <ImageView
        android:id="@+id/imageView_navIcon_nav"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/diff_s2"

        app:layout_constraintTop_toTopOf="@id/textView_instructions_nav"
        app:layout_constraintBottom_toBottomOf="@id/textView_instructions_nav"
        app:layout_constraintStart_toStartOf="parent"

        android:src="@drawable/ic_route"
        />

    <TextView
        android:id="@+id/textView_instructions_nav"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/diff_s2"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView_navIcon_nav"
        app:layout_constraintEnd_toEndOf="parent"

        android:text="These are simple navigation instructions"
        android:textSize="@dimen/font_size2"
        />


</androidx.constraintlayout.widget.ConstraintLayout>