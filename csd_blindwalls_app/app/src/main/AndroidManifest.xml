<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="logo.philist.csd_blindwalls_location_aware">


    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Csd_blindwalls_location_aware">
        <activity android:name=".Views.RouteListActivity"/>
        <activity android:name=".Views.MuralsListActivity"/>
        <activity android:name=".Views.MuralDetailActivity"/>
        <activity android:name=".Views.RouteDetailActivity"/>
        <activity android:name=".Views.MuralNavigationActivity"/>
        <activity android:name=".Views.RouteNavigationActivity"/>
        <activity android:name=".Views.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>